@using Job_Recruitment.ViewModels;
@model ScheduleInterviewVm


<h2>Schedule Interview</h2>

<form asp-action="SaveInterview" method="post">
    <input type="hidden" asp-for="ApplicationId" />

    <div class="form-group">
        <label asp-for="DateScheduled">Date</label>
        <input asp-for="DateScheduled" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="InterviewerName">Interviewer Name</label>
        <input asp-for="InterviewerName" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Schedule</button>
</form>


